extends layout/main_layout.pug

block content
    div.recorder 
        video#preview
        div.btns
            button#record_btn 녹화하기
            a#download-video(download="test.webm") Download Video
    form(method="POST" enctype='multipart/form-data')
      input(placeholder="제목", required, type="text", name="title", )
      label(for="video") 비디오 파일
      input(placeholder="비디오 파일", required, type="file",accpet='video/*,.image', name="video", )
      label(for="thumnail") 썸네일 파일
      input(placeholder="썸네일", required, type="file",accpet='video/*,.image', name="thumnail", )
      input(placeholder="설명", required, type="text", name="description", )
      input(placeholder="해시태그, separated by comma.", required, type="text", name="hashtag")
      input(type="submit", value="Upload Video")
block scripts 
    script(src="/assets/js/recorder.js")