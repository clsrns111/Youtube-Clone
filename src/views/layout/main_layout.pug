doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet" href="https://unpkg.com/mvp.css")
        link(rel="stylesheet" href="/assets/css/styles.css")
        title #{title} | Youtube
    body
        nav 
            ul 
                li 
                    a(href="/") 홈 
                li
                    a(href="/search") 검색하기 
                if loggedInUser
                    li
                        a(href="/users/edit") 프로필 수정
                    li
                        a(href=`/users/${loggedInUser._id}`) #{loggedInUser.name} 님
                    li
                        a(href="/video/upload") 비디오 업로드하기 
                    li
                        a(href="/users/logout") 로그아웃
                else        
                    li
                        a(href="/join") 회원가입
                    li
                        a(href="/login") 로그인 
        header 
              h1=title
        main
            block content
    include ../partials/footer.pug
script(src='/assets/js/main.js')
